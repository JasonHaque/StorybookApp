<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#194d33"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activities.LogInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="67sp"
        android:fontFamily="@font/barrioregular"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:text="@string/app_name"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Customedittext">

        <EditText
            android:id="@+id/log_in_mail"
            android:hint="@string/email_address"
            android:textSize="20sp"
            android:textColor="#ccffeb"
            android:backgroundTint="#f2f2f2"
            android:textCursorDrawable="@null"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#f2f2f2"
        android:theme="@style/Customedittext">

        <EditText
            android:id="@+id/log_in_password"
            android:hint="@string/password"
            android:textSize="20sp"
            android:textColor="#ccffeb"
            android:backgroundTint="#f2f2f2"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/log_in_button"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="New user ?"
        android:layout_width="wrap_content"
        android:textColor="#ccffeb"
        android:textSize="22sp"
        android:fontFamily="@font/acmeregular"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/goto_sign_up_button"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="#f2f2f2"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#0066cc"
        android:fontFamily="@font/ribeyemarrowregular"
        android:layout_width="112dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>